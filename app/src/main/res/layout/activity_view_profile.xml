<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">



    //Note: This ativity is supposed to be a popup window//

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            //Note: Concatinate first name and last name in this view//
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name:"

                android:textSize="20sp"
                android:textStyle="bold"
                />
            //place username here in this view//
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Shishir Bhandari"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"/>

            //Place address here//
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dhapakhel Road, Khumaltar, Lalitpur-15"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Contact Number"
                android:textSize="20sp"
                android:textStyle="bold" />

            //Place contact Number  here//
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9824234222"/>


            <Button
                android:id="@+id/edituserinfointent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:layout_margin="30dp"
                android:background="@drawable/homescreenbtns"
                android:textColor="@color/alwayswhite"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>