<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
   >


    <LinearLayout
        android:id="@+id/productlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:background="@color/alwayswhite"
        android:layout_margin="5dp"
        android:elevation="1dp">

        <ImageView
            android:id="@+id/productimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
                android:maxHeight="150dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/mobilephones" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/productname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vicks Nasal Moisturizing Spray"
                    android:textSize="14dp"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/productprice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rs.350"
                        android:textColor="#F28500"
                        android:textSize="21sp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/oldprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/horizontaldash"
                        android:text="Rs.410"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">


                    //Layout for Product rating display//
                    //Star rating should be in the left side of the product card//
                    //this is only an image at the moment//
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                       <RatingBar
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:numStars="5"
                           android:id="@+id/ratings"
                           style="@style/Widget.AppCompat.RatingBar.Small"
                           android:clickable="false"
                           android:stepSize="1"
                            android:theme="@style/RatingBar"
                            android:isIndicator="true"
                           />


                    </LinearLayout>


                </LinearLayout>
                
            </LinearLayout>






    </LinearLayout>

</LinearLayout>