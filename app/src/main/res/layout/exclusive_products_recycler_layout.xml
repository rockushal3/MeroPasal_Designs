<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:layout_margin="10dp"
    android:elevation="8dp">


    <LinearLayout
        android:id="@+id/productlayout"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/exclusiveproductimg"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"

            app:srcCompat="@drawable/mobilephones" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/exclusiveproductname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Iphone 8 Plus (8GB RAM, 256GB storage)"
                android:textSize="12dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/latestprice"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="Rs.350"
                    android:textColor="#F28500"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/originalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/horizontaldash"
                    android:text="Rs.410"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/addcartbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/alwayswhite"
            android:drawableRight="@drawable/ic_addtocart"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="Add to Cart"
            android:textColor="@color/alwaysblack"
            android:textSize="10dp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@drawable/banner"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="20%"
            android:id="@+id/discountvalue"
            android:gravity="center"
            android:textAlignment="center"

            android:layout_marginTop="10dp"
            android:textColor="@color/alwayswhite"

            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>