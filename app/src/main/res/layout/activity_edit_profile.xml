<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="vertical">
//Set user image in this circleimage view//

        //Note: editing the profile image is possible in this activity//
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="337dp"
            android:layout_height="125dp"
            android:id="@+id/profile"
            android:src="@drawable/blank_avatar" />

//Set username in this textview//
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shishir Bhandari"
            android:textColor="@color/alwayswhite"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/fullname"
            android:textSize="18sp"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:background="@color/alwayswhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/viewuserinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View my information"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View my personal information"
                        android:textStyle="italic"
                        />

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:drawableRight="@drawable/ic_next"/>
            </LinearLayout>


            //Edit Personal Information//
            <LinearLayout
                android:id="@+id/edituserinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit my information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit my personal information"
        android:textStyle="italic"
        />

</LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:drawableRight="@drawable/ic_next"/>
            </LinearLayout>

            //Edit Login credentials//
            <LinearLayout
                android:id="@+id/editlogincredentials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Login credentials"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit my Login credentials"
                        android:textStyle="italic"
                        />

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:drawableRight="@drawable/ic_next"/>
            </LinearLayout>



            //create a confirmation dialog box on whether the user really wants to logout or not//
            <Button
                android:id="@+id/logoutbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:layout_marginTop="20dp"
                android:background="@color/redprimaryAccent"
                android:textColor="@color/alwayswhite"/>





        </LinearLayout>





    </androidx.cardview.widget.CardView>



</LinearLayout>